<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.testfx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
         <items>
            <TextField id="inputFileName" fx:id="inputFileName">
               <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </padding>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TextField>
            <Button id="buttonDownload" fx:id="buttonDownload" mnemonicParsing="false" onAction="#downloadFile" text="Загрузить" />
            <Button id="buttonClear" fx:id="buttonClear" mnemonicParsing="false" onAction="#clearTable" text="Очистить" />
         </items>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </ToolBar>
      <RadioButton mnemonicParsing="false" text="RadioButton">
         <VBox.margin>
            <Insets left="400.0" />
         </VBox.margin>
      </RadioButton>
      <RadioButton mnemonicParsing="false" text="RadioButton">
         <VBox.margin>
            <Insets left="400.0" />
         </VBox.margin>
      </RadioButton>
      <TableView id="tableView" fx:id="tableView" maxWidth="-Infinity" prefHeight="300.0" prefWidth="375.0">
        <columns>
          <TableColumn id="columnNum" fx:id="columnNum" editable="false" prefWidth="115.0" resizable="false" style="-fx-alignment: CENTER;" text="Номер строки" />
          <TableColumn id="columnContent" fx:id="columnContent" editable="false" prefWidth="150.0" resizable="false" style="-fx-alignment: CENTER;" text="Содержимое" />
            <TableColumn id="columnImageView" fx:id="columnImageView" prefWidth="110.0" style="-fx-alignment: CENTER;" text="Изображение" />
        </columns>
         <VBox.margin>
            <Insets top="-80.0" />
         </VBox.margin>
      </TableView>
   </children>
</VBox>
